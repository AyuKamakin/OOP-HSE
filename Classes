#include <iostream>
#include <cstring>
#include <cassert>
#define DEBUG 0
using namespace std;

class Package
{
    float price;
    float size;
    char *name = nullptr;
public:
    //конструкторы по умолчанию
    Package()
    {
        price=0;
        size=0;
    }
    Package(const char* newName, const float& newSize, const float& newPrice)
    {
        name = strdup(newName);
        if(newSize>0&newSize<1001)size = newSize;
        else size=0;
        if(newPrice>0&newPrice<1001)price = newPrice;
        else price=0;
    }
    Package(const char* newName, const float& newSize)
    {
        name = strdup(newName);
        if(newSize>0&newSize<1001)size = newSize;
        else size=0;
        price=0;
    }
    Package(const char* newName)
    {
        name = strdup(newName);
        price = 0;
        size=0;
    }
    //конструктор копирования
    Package(const Package &ref)
    {
        name = ref.name;
        price = ref.price;
        size =ref.size;
    }
    //деструктор
    ~Package(){
        delete[] name;
#if DEBUG==1
        cout<<"called destructor for "<<name<<endl;
#endif
    }
    // методы класса
    const void setInfo(const char* newName, const float& newSize, const float& newPrice)
    {
        name = strdup(newName);
        if(newSize>0&newSize<1001)size = newSize;
        else size=0;
        if(newPrice>0&newPrice<1001)price = newPrice;
        else price=0;
    }
    const void setName(const char* newName){ name = strdup(newName); }
    const void setSize(const float& newSize){
        if(newSize>0&newSize<1001)size = newSize;
        else size=0;
    }
    const void setPrice(const float& newPrice){
        if(newPrice>0&newPrice<1001)price = newPrice;
        else price=0;
    }

    const char* getName() {
        if(name!=NULL)return name;
        else return "";
    }
    const float& getSize() const { return size;}
    const float& getPrice() const { return price;}
};
int main(){
    char *str="test";
    Package test=Package("test", 1002,3);
    assert(test.getSize()==0);
    string a=strdup(test.getName());
    assert(a=="test");
    assert(test.getPrice()==3);
    test.setInfo("test1", 1, -1);
    assert(test.getSize()==1);
    a=strdup(test.getName());
    assert(a=="test1");
    assert(test.getPrice()==0);
    test.setSize(4);
    assert(test.getSize()==4);
    test.setPrice(8);
    assert(test.getPrice()==8);
    Package test2=Package(test);
    assert(test.getSize()==test2.getSize());
    a=strdup(test.getName());
    string b=strdup(test2.getName());
    assert(a==b);
    assert(test.getPrice()==test2.getPrice());
    Package test3=Package();
    assert(test3.getSize()==0);
    a=strdup(test3.getName());
    assert(a=="");
    assert(test3.getPrice()==0);
}
