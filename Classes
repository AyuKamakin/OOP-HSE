#include <iostream>
#include <string>

using namespace std;

class package
{
    float price;
    float size;
    string name;

public:
    //конструкторы по умолчанию
    package()
    {
       price=0;
       size=0;
       name="unknown";
    }
    package(const string& newName, const float& newSize, const float& newPrice)
    {
        name = newName;
        size = newSize;
        price=newPrice;
    }
    package(const string& newName, const float& newSize)
    {
        name = newName;
        size = newSize;
        price=0;
    }
    package(const string& newName)
    {
        name = newName;
        price = 0;
        size=1;
    }
    //конструктор копирования
    package(const package & ref)
    {
        name = ref.name;
        price = ref.price;
        size =ref.size;
    }
    //деструктор
    ~package(){
        cout<<"called destructor for "<<name<<endl;
    }
    // методы класса
    void setInfo(const string& newName, const float& newSize, const float& newPrice)
    {
        name = newName;
        size = newSize;
        price=newPrice;
    }
    void setName(const string& newName){ name = newName; }
    void setSize(const float& newSize){ size = newSize; }
    void setPrice(const float& newPrice){ price =newPrice; }

    const string& getName() { return name;}
    const float& getSize() { return size;}
    const float& getPrice() { return price;}
    const string getInfo(){return (name+" in size of "+ to_string(size)+" and valued in "+ to_string(price)+" money ");}
};
int main(){
    package test=package("strawberry",1);
    cout << test.getSize() << endl;
    test.setInfo("cherries", 1 , 2);
    cout << test.getInfo() << endl;
    test.~package();
    return 0;
}
