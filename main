    for(int i=1;i<=list.getLen();i++){
        list.Print(i);
    }
    cout<<endl;

    list.insertWSort(coins2);
    for(int i=1;i<=list.getLen();i++){
        list.Print(i);
    }
    cout<<endl;

    list.insertBetween(coins3,0,1);
    for(int i=1;i<=list.getLen();i++){
        list.Print(i);
    }
    cout<<endl;

    List::Iterator it=list.head();
    Package temp = Package(correctName1, correctNum1, correctNum4);
    list.insertWSort(temp);
    for(int i=1;i<=list.getLen();i++){
        list.Print(i);
    }
    cout<<endl;
    temp.setInfo(correctName3, 1000000, 1);
    list.add(temp);
    for(int i=1;i<=list.getLen();i++){
        list.Print(i);
    }
    cout<<endl;
    temp.setInfo(correctName4, 88, correctNum8);
    list.insertBetween(temp,3,4);
    for(int i=1;i<=list.getLen();i++){
        list.Print(i);
    }
    cout<<endl;
    list.toFile("toFrom.txt");
    List list2;
    list2.fromFile("toFrom.txt");
    for(int i=1;i<=list2.getLen();i++){
        list2.Print(i);
